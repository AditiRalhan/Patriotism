<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.patriots.QuotesActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <com.example.admin.patriots.NonSwipeableViewPager
            android:layout_height="220dp"
            android:layout_width="match_parent"
            android:id="@+id/slider_pager_quotes" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="#77787878"
            android:layout_alignParentStart="true"
            android:src="@drawable/arrow_left_thick"
            android:scaleType="fitCenter"
            android:id="@+id/left_arrow_id"
            android:layout_alignParentLeft="true" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="#77787878"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_right_thick"
            android:scaleType="fitCenter"
            android:id="@+id/right_arrow_id"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:id="@+id/quotes_recycler_view_id"
        android:background="#e9c588"/>

</LinearLayout>
