<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="220dp"
    android:layout_width="match_parent"
    >
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#bc9a9a"
    android:id="@+id/quotes_card_id"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:id="@+id/quote_card_text_id"
            android:gravity="center"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:textSize="15sp"
            tools:ignore="MissingPrefix"
            fontPath="fonts/quicksandlight.ttf"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quote_card_text_id"
            android:id="@+id/quote_card_author_text_id"
            android:textColor="#fff"
            android:gravity="end"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:textSize="13sp"
            tools:ignore="MissingPrefix"
            fontPath="fonts/quicksandmedium.ttf"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
</FrameLayout>