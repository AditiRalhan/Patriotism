<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="377dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@id/mainLinearLayout"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/quotesLayout"
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/freedomFighterLayout"
            tools:layout_editor_absoluteY="169dp">

            <ImageButton
                android:id="@+id/quotesButton"
                android:layout_width="175dp"
                android:layout_height="155dp"
                android:background="#EF6C00"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/quotes" />

            <TextView
                android:id="@+id/quotesTextView"
                android:layout_width="175dp"
                android:layout_height="45dp"
                android:background="#EF6C00"
                android:gravity="center"
                android:text="Patriotic Quotes"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/freedomFighterLayout"
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_marginStart="0dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/quotesLayout"
            tools:layout_editor_absoluteY="107dp">

            <ImageButton
                android:id="@+id/freedomFighter"
                android:layout_width="175dp"
                android:layout_height="155dp"
                android:background="#00E676"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/freedom" />

            <TextView
                android:id="@+id/textViewFredomFighter"
                android:layout_width="175dp"
                android:layout_height="45dp"
                android:background="#00E676"
                android:gravity="center"
                android:text="Freedom Fighter"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="350dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="377dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/videoLayout"
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/songsLayout"
            tools:layout_editor_absoluteY="169dp">

            <ImageButton
                android:id="@+id/videoButton"
                android:layout_width="175dp"
                android:layout_height="155dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/videoimage"
                android:background="#6200EA"/>

            <TextView
                android:id="@+id/videdoTextView"
                android:layout_width="175dp"
                android:layout_height="45dp"
                android:background="#6200EA"
                android:gravity="center"
                android:text="Patriotic Videos"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/songsLayout"
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_marginStart="0dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/videoLayout"
            tools:layout_editor_absoluteY="107dp">

            <ImageButton
                android:id="@+id/songsButton"
                android:layout_width="175dp"
                android:layout_height="155dp"
                android:background="#d32f2f"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/songbutton" />

            <TextView
                android:id="@+id/textViewSong"
                android:layout_width="175dp"
                android:layout_height="45dp"
                android:background="#D32F2F"
                android:gravity="center"
                android:text="Patriotic Songs"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
