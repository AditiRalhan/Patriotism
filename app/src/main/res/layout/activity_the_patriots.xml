<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:tabMode="fixed"
        android:id="@+id/patriots_tab_layout_id"
        app:tabBackground="@color/medBrown"
        app:tabIndicatorColor="@color/darkBrown"
        app:tabTextColor="@color/darkBrown"
        app:tabSelectedTextColor="#fff3ef"
        android:background="@color/lightBrown"
        android:elevation="4dp"/>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/the_patriots_pager_id"/>

</LinearLayout>